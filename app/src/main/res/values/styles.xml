<resources>
    <!-- Application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/proximanova_regular</item>
    </style>

    <!-- Title Text Style -->
    <style name="TitleText">
        <item name="android:fontFamily">@font/proximanova_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Body Text Style -->
    <style name="BodyText">
        <item name="android:fontFamily">@font/proximanova_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <!-- Caption Text Style -->
    <style name="CaptionText">
        <item name="android:fontFamily">@font/proximanova_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <!-- Italic Text Style -->
    <style name="ItalicText">
        <item name="android:fontFamily">@font/proximanova_regular_italic</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#555555</item>
    </style>

    <!-- SemiBold Text Style -->
    <style name="SemiBoldText">
        <item name="android:fontFamily">@font/proximanova_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#222222</item>
    </style>

    <style name="ActiveIndicatorStyle">
        <item name="android:color">@color/colorNeutralBackground</item> <!-- Match your app's neutral tones -->
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/proximanova_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#000000</item> <!-- Set the desired text color -->
    </style>

    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_drawable</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:buttonTint">@color/colorPrimary</item>
    </style>

    <!-- Bold Caption Text Style -->
    <style name="BoldCaptionText">
        <item name="android:fontFamily">@font/proximanova_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>